{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Ruff Linter on All Files",
      "type": "shell",
      "command": "ruff check .",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "rufflint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.+):(\\d+):(\\d+):\\s+(.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ]
      },
      "detail": "Lint all Python files in the workspace using Ruff."
    },
    {
      "label": "Empty Ruff linting Problems",
      "type": "shell",
      "command": "ruff -h",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "rufflint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.+):(\\d+):(\\d+):\\s+(.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ]
      },
      "detail": "Clear the Problems Tab."
    },
    {
      "label": "Ruff: Safe fixes",
      "type": "shell",
      "command": "ruff",
      "args": [
          "check",
          "--fix",
          "${workspaceFolder}"
      ],
      "problemMatcher": [
          "$ruff"
      ],
      "presentation": {
          "reveal": "always",
          "panel": "new"
      },
      "group": "build"
  },
  {
      "label": "Ruff: Unsafe fixes",
      "type": "shell",
      "command": "ruff",
      "args": [
          "check",
          "--fix",
          "--unsafe-fixes",
          "${workspaceFolder}"
      ],
      "problemMatcher": [
          "$ruff"
      ],
      "presentation": {
          "reveal": "always",
          "panel": "new"
      },
      "group": "build"
  },
  {
    "label": "Open All Files Recursively",
    "type": "shell",
    "command": "bash",
    "args": [
        "-c",
        "find . -type f -name '*.py' -exec cursor {} \\;"
    ],
    "presentation": {
        "reveal": "always",
        "panel": "shared"
    },
    "problemMatcher": []
}
  ]
}
